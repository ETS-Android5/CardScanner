<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.vgu.dungluong.cardscannerapp.ui.main.MainViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SurfaceView
            android:id="@+id/surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.vgu.dungluong.cardscannerapp.ui.view.PaperRectangle
            android:id="@+id/paper_rect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTransparent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_banner_bg"
            android:padding="16dp">

            <ImageView
                android:id="@+id/shut"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_camera_enhance_light_blue_500_24dp"
                android:onClick="@{() -> viewModel.shut()}"
                android:clickable="@{!viewModel.isLoading}"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

    </RelativeLayout>
</layout>