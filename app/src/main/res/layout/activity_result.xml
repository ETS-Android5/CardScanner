<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.vgu.dungluong.cardscannerapp.ui.result.ResultViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white_bg">

        <ImageView
            android:id="@+id/cardImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/shut"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="@+id/cardImageView"
            app:layout_constraintBottom_toBottomOf="@+id/cardImageView"
            app:srcCompat="@drawable/ic_rotate"
            android:clickable="@{!viewModel.isLoading}"
            android:onClick="@{() -> viewModel.rotate()}"
            tools:ignore="ContentDescription"
            android:background="?android:attr/selectableItemBackground"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createButton"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/ocr_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardImageView"
            android:enabled="@{!viewModel.isLoading}"
            android:onClick="@{() -> viewModel.ocr()}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>